{
    "compilerOptions": {
        "lib": [
            "ES2023"
        ],
        "module": "ES2020",
        "moduleResolution": "nodenext",
        "target": "ES2020",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "declaration": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@services": [
                "src/services"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "*": [
                "node_modules/*",
                "src/common/types/*",
            ]
        }
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "test",
        "dist"
    ]
}